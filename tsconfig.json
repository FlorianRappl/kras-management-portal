{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2015", "es2016", "dom"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist/client"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.test.tsx"
  ]
}
